    <link href="~/Assets/css/Login-Sign.css" rel="stylesheet" />
    <title>知租網</title>

    @Scripts.Render("~/bundles/modernizr")
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    @RenderSection("topCSS", required: false)
    @RenderSection("topJS", required: false)

</head>

<body>
    <!-- overlayMobile為了讓側邊導覽出來時畫面變暗 -->
    <div class="overlayMobile"></div>

    <header-top>


        <div class="container-xl">
            <input type="checkbox" id="menu-control">

            <div class="header-nav">

                <div class="logo d-grid">
                    <a href='@Url.Action("Index", "Home", new { @class = "m-auto" })'>
                        <img src="~/Assets/images/Layout_Rent/logo.jpg" />
                    </a>
                </div>

                @*<div class="logo d-grid">
                        @Html.ActionLink("知租網", "Index", "Home", new { @class = "m-auto" })
                    </div>*@

                <div class="header-function-box">

                    <!-- 屆時MVC記得在input寫name 對應到action的參數 submit按鈕先hidden掉 待測試靠按enter可否行 -->
                    <div class="header-search-box d-grid">
                        <form class="m-auto">
                            <label class="header-search d-grid" for="header-search-input">
                                <input id="header-search-input" class="m-auto" type="text" placeholder=" 想租什麼呢?" />
                            </label>
                            <button type="submit"></button>
                        </form>
                    </div>

                    <div class="header-member-box">

                        <img src="~/Assets/images/Layout_Rent/cart.png" alt="" id="shoppingCart-icon" title="購物車">

                        <div class="member-dropdown">
                            <img src="~/Assets/images/Layout_Rent/member.png" alt="" id="member-icon" title="會員中心">
                            <ul class="member-subMenu">
                                <div class="profileBox">
                                    <div class="profileImg d-grid"><img class="m-auto" src="https://www.upmedia.mg/upload/article/20210801172246069922.jpg" alt=""></div>
                                    <div class="profileWelcome"><span>Hello</span><p class="profile-name">庭安</p></div>
                                </div>
                                <li><a href="#">通知</a></li>
                                <li><a href="#">我的訂單</a></li>
                                <li><a href="#">會員資料/修改</a></li>
                                <li><a href="@Url.Action("LogOut","Members")" class="signOutBtn">登出</a></li>
                            </ul>
                        </div>

                    </div>

                    <!-- 註冊登入鈕 -->
                    <nav class="nav-btn">
                        <a href="#" class="loginBtn" data-bs-toggle="modal" data-bs-target="#SignModal2">登入</a>
                        <a href="#" class="signUpBtn" data-bs-toggle="modal" data-bs-target="#LoginModal">註冊</a>
                    </nav>
                </div>

                <label for="menu-control" class="hb my-auto">
                    <span></span>
                    <span></span>
                    <span></span>
                </label>
            </div>

            <nav class="dropdown-nav">
                <div class="navbar">

                    <ul class="links">

                        <li>
                            <a href="#">商品總覽<i class="fas fa-chevron-down arrow"></i></a>

                            <ul class="sub-menu">
                                <li>@Html.ActionLink("所有種類", "ProductCategory", "Product")</li>
                                <li><a href="#">想租車車</a></li>
                                <li><a href="#">想租配件</a></li>
                                <li><a href="#">想租女友</a></li>
                                <li><a href="#">想租狗狗</a></li>
                                <li>@Html.ActionLink("想租電動", "ProductSubCategory", "Product")</li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">想租看這<i class="fas fa-chevron-down arrow"></i></a>
                            <ul class="sub-menu">
                                <li>@Html.ActionLink("如何租借", "HowToRent", "Home")</li>

                            </ul>
                        </li>
                        <li>
                            <a href="#">關於我們<i class="fas fa-chevron-down arrow"></i></a>
                            <ul class="sub-menu">
                                <li>@Html.ActionLink("我們的故事", "About", "Home")</li>
                                <li>@Html.ActionLink("回饋計畫", "ContributionProgram", "Home")</li>
                                <li>@Html.ActionLink("聯繫我們", "ContactUs", "Home")</li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">葉配一下<i class="fas fa-chevron-down arrow"></i></a>
                            <ul class="sub-menu">
                                <li>@Html.ActionLink("共享經濟", "SharingEconomy", "SocialMedia")</li>
                                <li><a href="#">上新聞了</a></li>
                                <li><a href="#">網紅推推</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </nav>
        </div>
    </header-top>

    <div id="sidebarContent">
        <div class="sidenav">

            <div class="logoBox">
                <a href='@Url.Action("Index", "Home")'>
                    <img src="~/Assets/images/Layout_Rent/logo.jpg" />
                </a>
                <div class="sidebar-btn">
                    <a href="#" class="loginBtn d-grid" data-bs-toggle="modal" data-bs-target="#SignModal2"><span class="m-auto">登入</span> </a>
                    <a href="#" class="signUpBtn d-grid" data-bs-toggle="modal" data-bs-target="#LoginModal"><span class="m-auto">註冊</span></a>
                </div>
            </div>

            <!-- 登入後秀出名字 -->
            <div class="profileBox">
                <div class="profileImg d-grid">
                    <img class="m-auto" src="https://www.upmedia.mg/upload/article/20210801172246069922.jpg" alt="">
                </div>
                <div class="profileWelcome">
                    <span>Hello</span><p class="profile-name">庭安</p>
                </div>
            </div>

            <div class="linkBox">
                <div class="sidebar-member-link">
                    <a href="#" class="dropdown-btn"> 會員中心 <i class="fas fa-caret-down"></i></a>
                    <div class="dropdown-container">
                        <a href="#">通知</a>
                        <a href="#">我的訂單</a>
                        <a href=@Html.ActionLink("會員資料/修改", "MemBerCenter", "Members")>會員資料/修改</a>
                        <a href="@Url.Action("LogOut","Members")" class="signOutBtn">登出</a>
                    </div>
                </div>
                <a href="#" class="dropdown-btn"> 商品總覽 <i class="fas fa-caret-down"></i></a>
                <div class="dropdown-container">
                    @Html.ActionLink("所有種類", "ProductCategory", "Product")
                    <a href="#">想租車車</a>
                    <a href="#">想租配件</a>
                    <a href="#">想租女友</a>
                    <a href="#">想租狗狗</a>
                    @Html.ActionLink("想租電動", "ProductSubCategory", "Product")
                </div>
                <a href="#" class="dropdown-btn"> 想租看這 <i class="fas fa-caret-down"></i></a>
                <div class="dropdown-container">
                    @Html.ActionLink("如何租借", "HowToRent", "Home")
                </div>
                <a href="#" class="dropdown-btn"> 關於我們 <i class="fas fa-caret-down"></i></a>
                <div class="dropdown-container">
                    <a href="#">我們的故事</a>
                    @Html.ActionLink("回饋計畫", "ContributionProgram", "Home")
                    <a href="#">聯繫我們</a>
                </div>
                <a href="#" class="dropdown-btn"> 共享好文 <i class="fas fa-caret-down"></i></a>
                <div class="dropdown-container">
                    @Html.ActionLink("共享經濟", "SharingEconomy", "SocialMedia")
                    <a href="#">上新聞了</a>
                    <a href="#">網紅推薦</a>
                </div>
            </div>
            <hr>

            <p class="text-center mt-3">download the free<br>mobile app</p>
            <div class="appDownload d-flex justify-content-center">
                <img src="~/Assets/images/Layout_Rent/googlePlay_white.jpg" style="height: 30px;" class="mx-1" alt="">
                <img src="~/Assets/images/Layout_Rent/appleStore_white.jpg" style="height: 30px;" class="mx-1" alt="">
            </div>

            <div class="social-media d-flex mt-4 justify-content-center">
                <a href="#" class="my-auto mx-2"><i class="fa fa-facebook"></i></a>
                <a href="#" class="my-auto mx-2"><i class="fa fa-twitter"></i></a>
                <a href="#" class="my-auto mx-2"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </div>

    @RenderBody()

    <footer class="site-footer">
        <div class="container-xl">
            <div class="row">
                <div class="col-12 col-md-12 d-flex my-2 footer-logo">
                    <h2>JUST RENT</h2>
                    <ul class="social-icons">
                        <a class="facebook" href="#"><i class="fa fa-facebook"></i></a>
                        <a class="twitter" href="#"><i class="fa fa-twitter"></i></a>
                        <a class="instagram" href="#"><i class="fab fa-instagram"></i></a>
                    </ul>

                </div>
                <div class="col-12 col-md-3">
                    <ul class="footer-links footer-info">
                        <li>0912345678</li>
                        <li>codestone@gmail.com</li>
                        <li>© 2021 All Rights Reserved.</li>
                    </ul>
                    <!--下載APP的圖先拿掉-->
                    <!-- <ul class="footer-links appDownload">
                        <li><a href="#"><img src="img/googleplay.png" alt="" style="width: 110px;"></a></li>
                        <li><a href="#"><img src="img/applestore.png" alt="" style="width: 110px;" ></a></li>
                    </ul>  -->

                </div>

                <div class="col-6 col-md-3">
                    <ul class="footer-links">
                        <a href="#"><li>所有種類</li></a>
                        <a href="#"><li>想租車車</li></a>
                        <a href="#"><li>想租配件</li></a>
                        <a href="#"><li>想租女友</li></a>
                        <a href="#"><li>想租狗狗</li></a>
                    </ul>
                </div>

                <div class="col-6 col-md-3">

                    <ul class="footer-links">
                        <a href="#"><li>如何租借</li></a>
                        <a href="#"><li>我們的故事</li></a>
                        <a href="#"><li>回饋計畫</li></a>
                        <a href="#"><li>聯繫我們</li></a>
                    </ul>
                </div>

                <div class="col-6 col-md-3">

                    <ul class="footer-links">
                        <a href="#"><li>共享經濟</li></a>
                        <a href="#"><li>上新聞了</li></a>
                        <a href="#"><li>網紅推推</li></a>
                    </ul>
                </div>


            </div>
        </div>

    </footer>
    @Html.Partial("Login-Sign")
    <div class="chatIcon">
        <!-- <i class="fas fa-sms"></i> -->
        <img src="~/Assets/images/Layout_Rent/chatIcon3.png" alt="">
        <div class="chatBox">聊天室</div>
    </div>

    <script src="~/Assets/js/Layout_Rent/header.js"></script>
    <script src="~/Assets/js/Layout_Rent/sidebar.js"></script>
    <script src="~/Assets/js/Layout_Rent/footer.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/@('@')fancyapps/ui/dist/fancybox.umd.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @RenderSection("endCSS", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    @RenderSection("endJS", required: false)

