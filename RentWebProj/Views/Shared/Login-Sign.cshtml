@{
    if (Session["UserID"] == null)
    {
        <script>
            document.querySelector('.sidebar-btn').style.display = 'flex';
            document.querySelector('.logoBox').style.display = 'flex';
            document.querySelector('#sidebarContent .profileBox').style.display = 'none';
            document.querySelector('.sidebar-member-link').style.display = 'none';
            document.querySelector('.nav-btn').style.display = 'block';
            document.querySelector('.member-dropdown').style.display = 'none';
        </script>
    }
    else
    {
        <script>
            document.querySelector('.sidebar-btn').style.display = 'none';
            document.querySelector('.logoBox').style.display = 'none';
            document.querySelector('#sidebarContent .profileBox').style.display = 'flex';
            document.querySelector('.sidebar-member-link').style.display = 'block';
            document.querySelector('.nav-btn').style.display = 'none';
            document.querySelector('.member-dropdown').style.display = 'block';
        </script>
    }
}

<div class="modal fade" tabindex="-2" id="SignModal2">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="btn-close position-absolute top-0 end-0 m-2 " data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal_header ">
                <div class="Modal_Logo">
                    <img src="https://soulkey373.github.io/WorkFinalblock/image/rentIcon.svg">
                </div>
                <h5 class="modal-title">從任何人那裡租任何東西</h5>
            </div>
            <div class="modal_content shadow px-3">
                <h5 class="modal-title text-center my-4">加入我們值得信賴和經過驗證的社群</h5>
                @using (Html.BeginForm("register", "Member", FormMethod.Post))
                {<div class="form-group  my-4">
                        <input type="Email" class="w-100  border-0" placeholder="電子郵件"name="Email">
                    </div>
                    <div class="form-group d-flex my-4">
                        <input type="password" class="w-100  border-0" placeholder="密碼" name="Password">
                    </div>
                    <div class="form-group d-flex my-4">
                        <input type="password" class="w-100  border-0" placeholder="確認密碼" name="Password">
                    </div>
                    <div class="form-check d-flex my-3">
                        <input type="checkbox" class="" id="exampleCheck1">
                        <label class="mx-3" for="exampleCheck1">我接受 <a class="text-primary mx-1">服務條款</a></label>
                    </div>
                    <button type="submit" class="btn my-4 text-light w-100" id="sign">註冊</button>
                }
            </div>
            <div class="modal_footer my-4 ">
                <h5 class="my-4 text-center">有帳戶嗎?<a class="text-primary m-1"><strong>登入</strong></a></h5>
                <div class="Modal_footer-content">
                    <span class="bg-white "></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" tabindex="-1" id="LoginModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="btn-close position-absolute top-0 end-0 m-2 " data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal_header ">
                <div class="Modal_Logo">
                    <img src="https://soulkey373.github.io/WorkFinalblock/image/rentIcon.svg">
                </div>
                <h5 class="modal-title">從任何人那裡租任何東西</h5>
            </div>
            <div class="modal_content shadow px-3">
                <h5 class="modal-title text-center my-4">登錄繼續</h5>
                @using (Html.BeginForm("Login", "Member", FormMethod.Post))
                {<div class="form-group  my-4">
                        <input type="Email" class="w-100  border-0" placeholder="電子郵件"name="Email">
                    </div>
                    <div class="form-group d-flex my-4">
                        <input type="password" class="w-100  border-0" placeholder="密碼" name="Password">
