@model MemberPersonDataViewModel

@{
    ViewBag.Title = "MemberCenter";
    //Layout = "~/Views/Shared/_Layout_Rent.cshtml";
}

<div class="member-center-container-outsidestyle">
    <div class="member-center-container">

        <div class="member-display-block">
            <!-- BS新版 -->
            <h2 class="member-display-title">訂單查詢</h2>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link select-hover active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">個人資料</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link select-hover" id="account-tab" data-bs-toggle="tab" data-bs-target="#account" type="button" role="tab" aria-controls="account" aria-selected="false">帳號管理</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link select-hover" id="profile-tab" data-bs-toggle="tab" data-bs-target="#order-search" type="button" role="tab" aria-controls="order-search" aria-selected="false">訂單查詢</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link select-hover" id="contact-tab" data-bs-toggle="tab" data-bs-target="#car-order" type="button" role="tab" aria-controls="car-order" aria-selected="false">待購清單</button>
                </li>
            </ul>

            <div class="tab-content" id="myTabContent">

                <!-- 個人資料 -->
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                    <div class="member-display-person-detail member-display-group">
                        <div class="member-display-name-container member-display-item">
                            <span class="member-display-header member-display-new-email-context">卡號</span>
                            <span class="member-display-service-id">{ABS20210809}</span>

                        </div>
                        <div class="member-display-radio-container member-display-item">
                            <div class="radio-men member-display-person-style">
                                <input type="radio" name="gender" id="gender">
                                <label class="member-display-header" for="text">男</label>
                                <i class="fas fa-male"></i>
                            </div>
                            <div class="radio-women member-display-person-style">
                                <input type="radio" name="gender" id="gender">
                                <label class="member-display-header" for="text">女</label>
                                <i class="fas fa-female"></i>
                            </div>
                        </div>
                        <div class="member-display-name-container member-display-item">
                            <div class="member-display-header">姓名</div><div class="member-display-point">*</div>
                            <div class="member-display-name-input-box-first">
                                <input type="text" class="member-display-firstname" name="firstname" value="@Model.MemberName" placeholder="姓" data-max="5">
                            </div>
                            <div class="member-display-name-input-box-last">
                                <input type="text" class="member-display-lastname" name="lastname" value="" placeholder="名" data-max="5">
                            </div>
                        </div>
                        <div class="member-display-born-container member-display-item">
                            <div class="member-display-header">生日</div><div class="member-display-point">*</div>
                            <div class="member-display-name-input-box-first">
                                <input type="text" class="member-display-year" name="year" value="@Model.MemBerBirthday.Year" placeholder="年" data-max="10">
                            </div>
                            <div class="member-display-name-input-box-first">
                                <input type="text" class="member-display-month" name="month" value="@Model.MemBerBirthday.Month" placeholder="月份" data-max="10">
                            </div>
                            <div class="member-display-name-input-box-first">
                                <input type="text" class="member-display-date" name="date" value="@Model.MemBerBirthday.Day" placeholder="日期" data-max="10">
                            </div>
                        </div>
                        <div class="member-display-phone-container member-display-item">
                            <div class="member-display-header">手機</div><div class="member-display-point">*</div>
                            <div class="member-display-name-input-box-first">
                                <input type="text" class="member-display-block-num" name="block" value="+886" placeholder="區域碼" data-max="10">
                            </div>
                            <div class="member-display-name-input-box-last">
                                <input type="text" class="member-display-num" name="num" value="@Model.MemberPhone" placeholder="電話" data-max="10">
                            </div>
                        </div>
                        <div class="member-display-shop-container member-display-item">
                            <div class="member-display-header">門市</div><div class="member-display-point">*</div>
                            <select class="member-display-shop" name="shop">
                                <option value="門市選項"></option>
                                <option value="中華大學總店">中華大學總店</option>
                                <option value="新竹站前分店">新竹站前分店</option>
                                <option value="新竹高鐵分店">新竹高鐵分店</option>
                                <option value="高雄左營高鐵分店">高雄左營高鐵分店</option>
                                <option value="台中烏日高鐵分店">台中烏日高鐵分店</option>
                            </select>
                        </div>
                        <div class="member-display-shop-container member-display-item">
                            <div class="member-display-button-group">
                                <button class="member-display-button-item">送出修改</button>
                            </div>
                        </div>
                    </div>
                    <!-- 底下顯示版 -->
                </div>

                <!--------------------------------------- 帳號 -->
                <div class="tab-pane fade" id="account" role="tabpanel" aria-labelledby="profile-tab">

                    <div class="member-display-person-detail member-display-account-detail member-display-group">
                        <div class="member-display-name-container member-display-item">
                            <div class="member-display-header member-display-new-email-context">目前信箱</div>
                            <div class="member-display-service-email">@Model.MemberEmail</div>
                        </div>
                        <div class="member-display-name-container member-display-item">
                            <div class="member-display-new-email-context">
                                <div class="member-display-header">請輸入新電子信箱</div>
                                <div class="member-display-point">*</div>
                            </div>

                            <div class="member-display-name-input-box-last">
                                <div class="member-display-email-container">
                                    <input type="email" class="member-display-new-email" name="new-email" value="" placeholder="新電子信箱" data-max="50">
                                </div>

                            </div>
                        </div>
                        <div class="member-display-name-container member-display-item">
                            <div class="member-display-new-email-context">
                                <div class="member-display-header">再確認新電子信箱</div>
                                <div class="member-display-point">*</div>
                            </div>
                            <div class="member-display-name-input-box-last ">
                                <div class="member-display-email-container">
                                    <input type="email" class="member-display-doublecheck-email" name="new-email" value="" placeholder="再輸入一次新電子信箱" data-max="50">
                                </div>

                            </div>
                        </div>

                        <!-- button -->
                        <div class="member-display-shop-container member-display-item">
                            <div class="member-display-button-group">
                                <button class="member-display-button-item member-display-email-button">送出修改</button>
                            </div>
                        </div>

                        <!-- 變更密碼 -->
                        <div class="member-display-name-container member-display-item">
                            <div class="member-display-header member-display-new-email-context">目前密碼</div>
                            <div class="member-display-service-password">@Model.MemberPasswordHash</div>
                        </div>
                        <div class="member-display-name-container member-display-item">
                            <div class="member-display-new-email-context">
                                <div class="member-display-header">請輸入新密碼</div>
                                <div class="member-display-point">*</div>
                            </div>
                            <div class="member-display-name-input-box-last">
                                <div class="member-display-email-container">
                                    <input type="email" class="member-display-new-email" name="new-email" value="" placeholder="新密碼" data-max="50">
                                </div>
                            </div>
                        </div>
                        <div class="member-display-name-container member-display-item">
                            <div class="member-display-new-email-context">
                                <div class="member-display-header">再輸入新密碼</div>
                                <div class="member-display-point">*</div>
                            </div>
                            <div class="member-display-name-input-box-last">
                                <div class="member-display-email-container">
                                    <input type="email" class="member-display-doublecheck-email" name="new-email" value="" placeholder="再輸入確認新密碼" data-max="50">
                                </div>

                            </div>
                        </div>
                        <!-- button -->
                        <div class="member-display-shop-container member-display-item">
                            <div class="member-display-button-group">
                                <button class="member-display-button-item member-display-password-button">送出修改</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 訂單 -->
                <div class="tab-pane fade" id="order-search" role="tabpanel" aria-labelledby="contact-tab">
                    <div class="member-display-title member-display-order-title">
                        <span class="member-display-order-item">店家</span>
                        <span class="member-display-order-item">租期</span>
                        <span class="member-display-order-item">金額</span>
                        <span class="member-display-order-item">交易日期</span>
                        <span class="member-display-order-item member-display-order-item-show">內容</span>
                    </div>
                    <div class="member-display-order-detail-container">
                        <div class="member-display-title member-display-order-detail">
                            <span class="member-display-order-item member-display-order-show">中華大學新竹總店</span>
                            <span class="member-display-order-item
                                    member-display-order-day">3天</span>
                            <span class="member-display-order-item
                                    member-display-order-dynamic-total">NT$900</span>
                            <span class="member-display-order-item
                                    member-display-order-day">110/8/1</span>
                            <span class="member-display-order-item-show-button member-display-order-item-show-dynamic-button">+</span>
                        </div>
                        <div class="member-display-order-detail-list">
                            <span class="member-display-order-item member-display-order-name">租賃商品</span>
                            <span class="member-display-order-item
                                    member-display-order-return-day">歸還日</span>
                            <span class="member-display-order-item
                                    member-display-order-price">單價</span>
                            <span class="member-display-order-item
                                    member-display-order-amount">數量</span>
                            <span class="member-display-order-item
                                    member-display-order-total">總計</span>
                            <span class="member-display-order-item member-display-order-dynamic-name">PS5 Pro</span>
                            <span class="member-display-order-item
                                    member-display-order-dynamic-return-day">110/8/4</span>
                            <span class="member-display-order-item
                                    member-display-order-dynamic-price">300</span>
                            <span class="member-display-order-item
                                    member-display-order-dynamic-amount">1</span>
                            <span class="member-display-order-item
                                    member-display-order-dynamic-total">NT$900</span>
                        </div>
                    </div>



                    <div class="member-display-order-detail-container">
                        <div class="member-display-title member-display-order-detail">
                            <span class="member-display-order-item member-display-order-show">新竹站前分店</span>
                            <span class="member-display-order-item
                                    member-display-order-day">1天</span>
                            <span class="member-display-order-item
                                    member-display-order-dynamic-total">NT$500</span>
                            <span class="member-display-order-item
                                    member-display-order-day">110/8/5</span>
                            <span class="member-display-order-item-show-button member-display-order-item-show-dynamic-button">+</span>
                        </div>
                        <div class="member-display-order-detail-list">
                            <span class="member-display-order-item member-display-order-name">租賃商品</span>
                            <span class="member-display-order-item
                                    member-display-order-return-day">歸還日</span>
                            <span class="member-display-order-item
                                    member-display-order-price">單價</span>
                            <span class="member-display-order-item
                                    member-display-order-amount">數量</span>
                            <span class="member-display-order-item
                                    member-display-order-total">總計</span>
                            <span class="member-display-order-item member-display-order-dynamic-name">杜卡迪991</span>
                            <span class="member-display-order-item
                                    member-display-order-dynamic-return-day">110/8/6</span>
                            <span class="member-display-order-item
                                    member-display-order-dynamic-price">500</span>
                            <span class="member-display-order-item
                                    member-display-order-dynamic-amount">1</span>
                            <span class="member-display-order-item
                                    member-display-order-dynamic-total">NT$500</span>
                        </div>
                    </div>

                </div>
                <!-- 購物車 -->
                <div class="tab-pane fade" id="car-order" role="tabpanel" aria-labelledby="car-order"></div>
            </div>

        </div>
    </div>
</div>




