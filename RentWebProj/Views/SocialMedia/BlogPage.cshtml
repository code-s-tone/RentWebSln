@model BlogViewModel
@{
    ViewBag.Title = @Model.BlogTitle;
}

<div class="container blogPageContainer">
    <div class="row">
        <div class="col-12 blogBox">
            <div class="d-grid" >
                <img src=@Model.MainImgUrl class="mainImg my-5 mx-auto" alt=@Model.MainImgUrl>
            </div>
            
            <div class="d-grid">
                <h1 class="title m-auto mb-4">@Model.BlogTitle</h1>
                <span class="date mx-auto">@Model.PostDate.ToString("yyyy-MM-dd") #旁編</span>
            </div>

            <div class="my-4 m-auto content">
                @Html.Raw(Model.BlogContent)

            </div>


        </div>
        

    </div>
</div>
@section topCSS{
    <style>
        .blogPageContainer {
            max-width: 1200px;
            margin: auto;
            background-color: #fbfbfb;
        }
            .blogPageContainer .mainImg {
                width: 90%;
                height: 600px;
                object-fit: cover;
            }
        .blogBox {
            padding: 0 50px;
        }
            .blogPageContainer .title {
                font-size: 40px;
                font-weight: bolder;
            }

            .blogPageContainer .date {
                color: cadetblue;
            }

            .blogPageContainer .content {
                width: 85%;
                line-height: 2;
            }

            @@media screen and (max-width:767px) {
                .blogBox {
                    padding:0 15px;

                }
                .blogBox img{
                    max-width:280px;
                    max-height:350px;
                    object-fit:contain;
                }

            }
    </style>
}
@if (User.Identity.IsAuthenticated)
{
    var result = Helper.ConvertMemberIdToMemberProfile(Int32.Parse(User.Identity.Name));
    TempData["img"] = result.ProfilePhotoUrl;
    TempData["name"] = result.Fullname;
}