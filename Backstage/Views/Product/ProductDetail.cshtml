@{
    ViewData["Title"] = "ProductDetail";
}
<h1 class="Product_title"></h1>
<b-container fluid id="app" class="m-2">
    <form>

        <b-col>
            <label for="input-small">產品編號:</label>
        </b-col>
        <b-col>
            <b-form-input id="input-small" size="sm" placeholder="請輸入" :value="items.ProductId"
                          name="ProductId" class="_ProductId" v-model="items.ProductId"
                          v-bind:class="{ 'is-invalid': ProductIdError }">
            </b-form-input>
            <div class="invalid-feedback">
                {{ ProductIdErrMsg }}
            </div>
        </b-col>
        <b-col>
            <label for="input-small" class="mt-3">產品名稱:</label>
        </b-col>
        <b-col>
            <b-form-input id="input-small" size="sm" placeholder="請輸入" :value="items.ProductName"
                          name="ProductName" class="_ProductName" v-model="items.ProductName"
                          v-bind:class="{ 'is-invalid': ProductNameError }"></b-form-input>
            <div class="invalid-feedback">
                {{ ProductNameErrMsg }}
            </div>
        </b-col>

        <b-col>
            <label for="input-small" class="mt-3">產品描述:</label>
        </b-col>
        <b-col>
            <b-form-input id="input-small" size="sm" placeholder="請輸入" :value="items.Description"
                          name="Description" class="_Description" v-model="items.Description"
                          v-bind:class="{ 'is-invalid': DescriptionError }"></b-form-input>
            <div class="invalid-feedback">
                {{ DescriptionErrMsg }}
            </div>
        </b-col>

        <b-col>
            <label for="input-small" class="mt-3">產品單價:</label>
        </b-col>
        <b-col>
            <b-form-input id="input-small" size="sm" placeholder="請輸入" :value="items.DailyRate"
                          name="DailyRate" class="_DailyRate" v-model="items.DailyRate"
                          v-bind:class="{ 'is-invalid': DailyRateError }"></b-form-input>
            <div class="invalid-feedback">
                {{ DailyRateErrMsg }}
            </div>
        </b-col>
        <div class="text-center">
            <b-spinner variant="primary" label="Text Centered" class="spinner-border spinner d-none"></b-spinner>
        </div>
        <b-col>
            <label for="input-small" class="mt-3">上架時間:</label>
            <vuejs-datepicker v-model="items.LaunchDate"></vuejs-datepicker>
        </b-col>


        <b-col>
            <label for="input-small" class="mt-3">下架時間:</label>
        </b-col>
        <b-col>
            <vuejs-datepicker v-model="items.WithdrawalDate"></vuejs-datepicker>
        </b-col>

        <b-col>
            <label for="input-small" class="mt-3">產品圖片:</label>

            <div id="upload" class="btn btn-primary"><i class="fas fa-arrow-circle-up"></i></div>

            <input id="file" type="file" multiple style="display:none">
            <div class="gallery" id="gallery"></div>

        </b-col>

        <b-form-checkbox v-model="items.Discontinuation" name="check-button" switch class="text-center mt-3 _Discontinuation">
            是否停用產品
        </b-form-checkbox>

        <b-col class="text-center mt-3">
            @*<input disabled type="text" @@click="fetchx()" class="_summit btn btn-info text-center text-light" value="送出修改">*@
            <b-button  variant="primary" size="lg" @@click="fetchx()"class="_summit" :disabled="disabled">送出修改</b-button>
        </b-col>
    </form>
</b-container>


@section topJS{
    <script src="~/js/Product/moment.js"></script>
    <script src="~/js/Product/momentTW.js"></script> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.4/axios.min.js" integrity="sha512-lTLt+W7MrmDfKam+r3D2LURu0F47a3QaW5nF0c6Hl0JDZ57ruei+ovbg7BrZ+0bjVJ5YgzsAWE+RreERbpPE1g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://unpkg.com/vuejs-datepicker"></script>


}
@section topCSS{
    <link href="~/css/PhotoProduct.css" rel="stylesheet" />
}
@section endJS{
    <script src="~/js/Product/ProductDetail.js"></script>
    <script src="~/js/Product/ProductDetail_BaseImg.js"></script>
}