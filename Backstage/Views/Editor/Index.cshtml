@{
    ViewData["Title"] = "Editor";
}

<form name='form' action='#' method='post'>
    <textarea name="postContent" id="content" rows="10" cols="80"></textarea>
    <input class="btn btn-primary mt-3" type='button' value='送出' onclick='processData()'>
</form>

<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>

