        //設定視窗高度及寬度
        config.width = 600; //也可以這樣寫

        //語言
        config.language = 'zh-tw';

        //背景顏色
        config.uiColor = '#FFFFFF';

        //字體
        config.fontSize_sizes = '12/12px;13/13px;16/16px;15/15px;18/18px;20/20px;22/22px;24/24px;36/36px;48/48px;'

